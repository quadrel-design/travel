rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Match any document in the 'users' collection
    match /users/{userId} {
      // Allow reading/writing user profile info only by the user themselves
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Match the 'journeys' subcollection for a specific user
      match /journeys/{journeyId} {
        // Allow the owner of the user document (userId) to read/write their journeys
        allow read, write: if request.auth != null && request.auth.uid == userId;

        // Match the 'images' subcollection within a specific journey
        match /images/{imageId} {
          // Allow the owner of the journey (userId) to read/write images within that journey
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
      }
    }
    // Add other rules for other collections if needed
  }
} 