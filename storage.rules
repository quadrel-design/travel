rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Invoice images: users/{userId}/projects/{projectId}/invoices/{invoiceId}/invoice_images/{fileName}
    match /users/{userId}/projects/{projectId}/invoices/{invoiceId}/invoice_images/{fileName} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
} 